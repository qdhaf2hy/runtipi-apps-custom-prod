{
  "services": [
    {
      "name": "syncthing",
      "image": "syncthing/syncthing:1.29",
      "isMain": true,
      "internalPort": 8384,
      "addPorts": [
        {
          "hostPort": 22000,
          "containerPort": 22000,
          "tcp": true,
          "udp": true
        },
        {
          "hostPort": 21027,
          "containerPort": 21027,
          "udp": true
        }
      ],
      "hostname": "${SYNCTHING_DEVICENAME}",
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/syncthing"
        }
      ],
      "stopGracePeriod": "1m"
    }
  ],
  "schemaVersion": 2,
  "$schema": "../dynamic-compose-schema.json"
}
