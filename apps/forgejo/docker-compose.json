{
  "services": [
    {
      "name": "forgejo",
      "image": "codeberg.org/forgejo/forgejo:13.0.4",
      "isMain": true,
      "environment": [
        {
          "key": "USER_UID",
          "value": "1000"
        },
        {
          "key": "USER_GID",
          "value": "1000"
        }
      ],
      "internalPort": 3000,
      "addPorts": [
        {
          "containerPort": 22,
          "hostPort": 222,
          "tcp": true,
          "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/forgejo",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}