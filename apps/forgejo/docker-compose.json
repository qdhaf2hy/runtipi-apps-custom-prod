{
  "services": [
    {
      "name": "forgejo",
      "image": "codeberg.org/forgejo/forgejo:11.0.1",
      "environment": {
        "USER_UID": "1000",
        "USER_GID": "1000"
      },
      "internalPort": 3000,
      "addPorts": [
        {
          "containerPort": 22,
          "hostPort": 222,
          "tcp": true,
          "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/forgejo",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "dependsOn": {
        "forgejo-db": {
          "condition": "service_started"
        }
      },
      "isMain": true
    }
  ]
}